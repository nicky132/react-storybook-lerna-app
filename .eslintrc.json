{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
      "google", "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint", "prettier"
    ],
    "overrides": [{ "files": ["**/*.{js,ts,tsx}"] }],
    "rules": {
      "prettier/prettier": [
        "warn",
        {
          "endOfLine": "auto"
        }
      ],
      "max-len": "off",
      "valid-jsdoc": "warn",
      "require-jsdoc": "off",
      "linebreak-style": "off",
      "no-unused-vars": "warn"
    }
}
